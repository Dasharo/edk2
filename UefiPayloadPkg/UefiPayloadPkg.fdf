################################################################################
[FD.UefiPayload]
BaseAddress   = 0x800000|gUefiPayloadPkgTokenSpaceGuid.PcdPayloadFdMemBase
Size          = 0xE00000|gUefiPayloadPkgTokenSpaceGuid.PcdPayloadFdMemSize
ErasePolarity = 1
BlockSize     = 0x1000
NumBlocks     = 0xE00

0x00000000|0x060000
FV = PEIFV

0x00060000|0xDA0000
