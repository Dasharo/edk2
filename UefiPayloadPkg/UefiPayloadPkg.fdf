################################################################################
[FD.UefiPayload]
BaseAddress   = 0x800000|gUefiPayloadPkgTokenSpaceGuid.PcdPayloadFdMemBase
Size          = 0x800000|gUefiPayloadPkgTokenSpaceGuid.PcdPayloadFdMemSize
ErasePolarity = 1
BlockSize     = 0x1000
NumBlocks     = 0x800

0x00000000|0x040000
FV = PEIFV

0x00040000|0x7C0000
FV = DXEFV

################################################################################
